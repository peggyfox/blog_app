<div id="container">
  <h1>Letters from the Peace Corps</h1>
  <h3><em>Ecuador 2010-2012</em></h3>

  <%= link_to 'New Article', new_article_path %><br>
  <br>
   
  <table>
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
   
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%=link_to 'Show', article_path(article) %> </td>
        <td><%=link_to 'Edit', edit_article_path(article) %></td>
        <td><%=link_to 'Destroy', article_path(article), method: :delete %>
      </tr>
    <% end %>
  </table>
</div>